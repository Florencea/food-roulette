{
  "type": "module",
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "lint": "wireit",
    "format": "wireit",
    "build": "wireit",
    "deploy": "wireit"
  },
  "wireit": {
    "build": {
      "command": "vite build",
      "files": [
        "src",
        "public",
        "index.html",
        "tsconfig.json",
        "tsconfig.node.json",
        "vite.config.ts"
      ],
      "clean": "if-file-deleted",
      "output": [
        "dist/**"
      ],
      "dependencies": [
        "format",
        "lint"
      ]
    },
    "deploy": {
      "command": "gh-pages -d dist",
      "files": [
        "dist/**"
      ],
      "output": [],
      "dependencies": [
        "build"
      ]
    },
    "lint": {
      "command": "eslint --ext js,js.cjs,jsx,ts,tsx --color --cache --cache-location .eslintcache . && tsc",
      "files": [
        "*/**.{js,js.cjs,jsx,ts,tsx}",
        ".eslintrc.json",
        "!public",
        "!dist"
      ],
      "output": []
    },
    "format": {
      "command": "prettier '**/*' --write --ignore-unknown --cache",
      "files": [
        "*/**.{js,js.cjs,jsx,ts,tsx,json,md,yml,yaml,html}",
        "!public",
        "!dist"
      ],
      "output": []
    }
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.35",
    "@types/react-dom": "^18.2.14",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "@vitejs/plugin-react": "^4.1.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "gh-pages": "^6.0.0",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-plugin-pwa": "^0.16.7",
    "vite-plugin-singlefile": "^0.13.5",
    "wireit": "^0.14.1"
  }
}
